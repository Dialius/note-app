<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_gray"
    tools:context=".HomeActivity">

    <!-- Top Bar -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/topBar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/dark_purple"
        android:paddingTop="16dp"
        android:paddingBottom="24dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Menu Icon -->
        <ImageView
            android:id="@+id/imageViewMenu"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_menu"
            android:contentDescription="@string/menu"
            android:layout_marginStart="20dp"
            app:tint="@color/white"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- Title -->
        <TextView
            android:id="@+id/textViewTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tanggal"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Alarm Icon -->
        <ImageView
            android:id="@+id/imageViewAlarm"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_alarm"
            android:contentDescription="@string/alarm"
            android:layout_marginEnd="20dp"
            app:tint="@color/white"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Today Section -->
        <TextView
            android:id="@+id/textViewToday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/today"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginStart="20dp"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@id/textViewTitle"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/textViewTaskCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/task_count"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:alpha="0.8"
            android:layout_marginStart="20dp"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@id/textViewToday"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- Add New Button -->
        <Button
            android:id="@+id/buttonAddNew"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="@string/add_new"
            android:textSize="14sp"
            android:textColor="@color/dark_purple"
            android:background="@drawable/button_white_rounded"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:layout_marginEnd="20dp"
            app:layout_constraintTop_toTopOf="@id/textViewToday"
            app:layout_constraintBottom_toBottomOf="@id/textViewTaskCount"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Date Selector -->
    <HorizontalScrollView
        android:id="@+id/dateScrollView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/topBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:id="@+id/dateContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingStart="20dp"
            android:paddingEnd="20dp">

            <!-- Date Item 1 -->
            <TextView
                android:id="@+id/textViewDate1"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:text="15"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:gravity="center"
                android:background="@drawable/date_item_background"
                android:layout_marginEnd="12dp" />

            <!-- Date Item 2 -->
            <TextView
                android:id="@+id/textViewDate2"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:text="16"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:gravity="center"
                android:background="@drawable/date_item_background"
                android:layout_marginEnd="12dp" />

            <!-- Date Item 3 -->
            <TextView
                android:id="@+id/textViewDate3"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:text="17"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:gravity="center"
                android:background="@drawable/date_item_background"
                android:layout_marginEnd="12dp" />

            <!-- Date Item 4 -->
            <TextView
                android:id="@+id/textViewDate4"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:text="18"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:gravity="center"
                android:background="@drawable/date_item_background"
                android:layout_marginEnd="12dp" />

        </LinearLayout>

    </HorizontalScrollView>

    <!-- My Task Title -->
    <TextView
        android:id="@+id/textViewMyTask"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/my_task"
        android:textSize="22sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginStart="20dp"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/dateScrollView"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- RecyclerView for Task List -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewTasks"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:clipToPadding="false"
        app:layout_constraintTop_toBottomOf="@id/textViewMyTask"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:listitem="@layout/item_task" />

</androidx.constraintlayout.widget.ConstraintLayout>