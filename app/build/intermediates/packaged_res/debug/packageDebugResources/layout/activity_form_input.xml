<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_bg"
    tools:context=".FormInputActivity">

    <!-- Top Bar -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/topBarForm"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:elevation="4dp"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Menu Icon -->
        <ImageView
            android:id="@+id/imageViewMenuGrid"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_grid_menu"
            android:contentDescription="@string/menu_grid"
            android:layout_marginStart="20dp"
            app:tint="@color/text_dark"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- Title -->
        <TextView
            android:id="@+id/textViewCreateTask"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/create_task"
            android:textColor="@color/text_dark"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- History/Clock Icon -->
        <ImageView
            android:id="@+id/imageViewHistory"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_history"
            android:contentDescription="@string/history"
            android:layout_marginEnd="20dp"
            app:tint="@color/text_dark"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Date Selector Horizontal Scroll -->
    <HorizontalScrollView
        android:id="@+id/horizontalDateScroll"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/topBarForm"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:id="@+id/dateContainerForm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingStart="20dp"
            android:paddingEnd="20dp">

            <!-- Date Box 1 -->
            <TextView
                android:id="@+id/dateBox1"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:gravity="center"
                android:background="@drawable/date_box_background"
                android:layout_marginEnd="12dp" />

            <!-- Date Box 2 -->
            <TextView
                android:id="@+id/dateBox2"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:gravity="center"
                android:background="@drawable/date_box_background"
                android:layout_marginEnd="12dp" />

            <!-- Date Box 3 -->
            <TextView
                android:id="@+id/dateBox3"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:gravity="center"
                android:background="@drawable/date_box_background"
                android:layout_marginEnd="12dp" />

            <!-- Date Box 4 -->
            <TextView
                android:id="@+id/dateBox4"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:gravity="center"
                android:background="@drawable/date_box_background"
                android:layout_marginEnd="12dp" />

        </LinearLayout>

    </HorizontalScrollView>

    <!-- Choose Activity Label -->
    <TextView
        android:id="@+id/labelChooseActivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/choose_activity"
        android:textSize="16sp"
        android:textColor="@color/text_dark"
        android:textStyle="bold"
        android:layout_marginStart="20dp"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/horizontalDateScroll"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- RecyclerView for Activity List -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewActivities"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:paddingBottom="80dp"
        android:clipToPadding="false"
        app:layout_constraintTop_toBottomOf="@id/labelChooseActivity"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:listitem="@layout/item_activity" />

    <!-- Floating Action Button -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabAddActivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_add"
        android:contentDescription="@string/add_activity"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        app:tint="@color/white"
        app:backgroundTint="@color/fab_blue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>