+import android.app.DatePickerDialog
+import android.app.TimePickerDialog
+import android.content.Intent
+import android.os.Build
+import android.os.Bundle
+import android.widget.Toast
+import androidx.appcompat.app.AppCompatActivity
+import com.example.notes_app.databinding.ActivityAddTaskBinding
+import java.text.SimpleDateFormat
+import java.util.Calendar
+import java.util.Locale
+
+class AddTaskActivity : AppCompatActivity() {
+
+    private lateinit var binding: ActivityAddTaskBinding
+    private var existingTask: Task? = null
+    // Satu Calendar untuk menyimpan tanggal dan waktu yang dipilih
+    private val selectedCalendar = Calendar.getInstance()
+
+    override fun onCreate(savedInstanceState: Bundle?) {
+        super.onCreate(savedInstanceState)
+        binding = ActivityAddTaskBinding.inflate(layoutInflater)
+        setContentView(binding.root)
+
+        existingTask = getTaskFromIntent(intent, EXTRA_EDIT_TASK)
+
+        if (existingTask != null) {
+            binding.textViewTitle.text = "Edit Task"
+            populateFields(existingTask!!)
+        } else {
+            binding.textViewTitle.text = getString(R.string.add_new_task)
+        }
+
+        initListeners()
+    }
+
+    // Mengisi kolom input jika dalam mode edit
+    private fun populateFields(task: Task) {
+        binding.editTextTaskTitle.setText(task.title)
+        binding.editTextTaskDescription.setText(task.description)
+
+        // Atur waktu kalender internal ke waktu tugas yang ada
+        selectedCalendar.timeInMillis = task.dateTimeMillis
+
+        // Set tanggal dan waktu, lalu ubah warna teksnya agar terlihat sudah diisi
+        binding.textViewSelectDate.text = task.date
+        binding.textViewSelectDate.setTextColor(getColor(R.color.black))
+        binding.textViewSelectTime.text = task.time
+        binding.textViewSelectTime.setTextColor(getColor(R.color.black))
+    }
+
+    private fun initListeners() {
+        binding.buttonBack.setOnClickListener { finish() }
+        binding.buttonSaveTask.setOnClickListener { saveTask() }
+
+        // Listener untuk memunculkan kalender
+        binding.textViewSelectDate.setOnClickListener { showDatePicker() }
+
+        // Listener untuk memunculkan pemilih waktu
+        binding.textViewSelectTime.setOnClickListener { showTimePicker() }
+    }
+
+    private fun showDatePicker() {
+        val dateSetListener = DatePickerDialog.OnDateSetListener { _, year, month, dayOfMonth ->
+            selectedCalendar.set(Calendar.YEAR, year)
+            selectedCalendar.set(Calendar.MONTH, month)
+            selectedCalendar.set(Calendar.DAY_OF_MONTH, dayOfMonth)
+            updateDateInView()
+        }
+        val datePickerDialog = DatePickerDialog(this, dateSetListener,
+            selectedCalendar.get(Calendar.YEAR),
+            selectedCalendar.get(Calendar.MONTH),
+            selectedCalendar.get(Calendar.DAY_OF_MONTH)
+        )
+        // Menonaktifkan tanggal yang sudah lewat
+        datePickerDialog.datePicker.minDate = System.currentTimeMillis() - 1000
+        datePickerDialog.show()
+    }
+
+    private fun showTimePicker() {
+        val timeSetListener = TimePickerDialog.OnTimeSetListener { _, hourOfDay, minute ->
+            selectedCalendar.set(Calendar.HOUR_OF_DAY, hourOfDay)
+            selectedCalendar.set(Calendar.MINUTE, minute)
+            updateTimeInView()
+        }
+        TimePickerDialog(this, timeSetListener,
+            selectedCalendar.get(Calendar.HOUR_OF_DAY),
+            selectedCalendar.get(Calendar.MINUTE),
+            true // 'true' untuk format 24 jam
+        ).show()
+    }
+
+    private fun updateDateInView() {
+        val myFormat = "EEE, dd MMM yyyy" // Format: "Sab, 25 Mei 2024"
+        val sdf = SimpleDateFormat(myFormat, Locale.getDefault())
+        binding.textViewSelectDate.text = sdf.format(selectedCalendar.time)
+        binding.textViewSelectDate.setTextColor(getColor(R.color.black))
+    }
+
+    private fun updateTimeInView() {
+        // Format waktu menjadi "HH:mm" (misal: "09:30" atau "14:05")
+        val myFormat = "HH:mm"
+        val sdf = SimpleDateFormat(myFormat, Locale.getDefault())
+        binding.textViewSelectTime.text = sdf.format(selectedCalendar.time)
+        binding.textViewSelectTime.setTextColor(getColor(R.color.black))
+    }
+
+    private fun saveTask() {
+        val title = binding.editTextTaskTitle.text.toString().trim()
+        val description = binding.editTextTaskDescription.text.toString().trim()
+        val date = binding.textViewSelectDate.text.toString()
+        val time = binding.textViewSelectTime.text.toString()
+
+        // Validasi input
+        if (title.isEmpty()) {
+            Toast.makeText(this, "Title cannot be empty!", Toast.LENGTH_SHORT).show()
+            return
+        }
+        if (date == getString(R.string.select_date)) {
+            Toast.makeText(this, "Please select a date!", Toast.LENGTH_SHORT).show()
+            return
+        }
+        if (time == getString(R.string.select_time)) {
+            Toast.makeText(this, "Please select a time!", Toast.LENGTH_SHORT).show()
+            return
+        }
+
+        val resultIntent = Intent()
+        if (existingTask != null) {
+            // MODE EDIT: Perbarui tugas yang ada
+            val updatedTask = existingTask!!.copy(
+                dateTimeMillis = selectedCalendar.timeInMillis, // PERUBAHAN KUNCI
+                date = date,
+                time = time,
+                title = title,
+                description = description
+            )
+            resultIntent.putExtra(EXTRA_EDITED_TASK, updatedTask)
+        } else {
+            // MODE ADD: Buat tugas baru
+            val newTask = Task(
+                dateTimeMillis = selectedCalendar.timeInMillis, // PERUBAHAN KUNCI
+                date = date,
+                time = time,
+                title = title,
+                description = description,
+                status = "On Schedule" // Status default
+            )
+            resultIntent.putExtra(EXTRA_NEW_TASK, newTask)
+        }
+
+        setResult(Activity.RESULT_OK, resultIntent)
+        finish()
+    }
+
+    private fun getTaskFromIntent(intent: Intent?, key: String): Task? {
+        return if (Build.VERSION.SDK_INT >= Build.VERSION_CODES.TIRAMISU) {
+            intent?.getParcelableExtra(key, Task::class.java)
+        } else {
+            @Suppress("DEPRECATION")
+            intent?.getParcelableExtra(key)
+        }
+    }
+
