+        if (isAllFabsVisible) {
+            hideActionFabs()
+        }
+        selectedTask = null
+        val previouslySelected = taskAdapter.selectedItemPosition
+        taskAdapter.selectedItemPosition = RecyclerView.NO_POSITION
+        if (previouslySelected != -1) {
+            taskAdapter.notifyItemChanged(previouslySelected)
+        }
+    }
