+package com.example.notes_app
+
+import android.app.Activity
+import android.content.Intent
+import android.os.Build
+import android.os.Bundle
+import android.widget.Button
+import android.widget.EditText
+import android.widget.ImageButton
+import android.widget.Toast
+import androidx.appcompat.app.AppCompatActivity
+
+class EditTaskActivity : AppCompatActivity() {
+
+    // Variabel untuk menyimpan data tugas asli yang dikirim dari HomeActivity
+    private var originalTask: Task? = null
+
+    override fun onCreate(savedInstanceState: Bundle?) {
+        super.onCreate(savedInstanceState)
+        setContentView(R.layout.activity_edit_task) // Gunakan layout yang sudah kita buat
+
+        // 1. Hubungkan semua komponen UI dari layout
+        val buttonBack: ImageButton = findViewById(R.id.buttonBack)
+        val buttonSaveChanges: Button = findViewById(R.id.buttonSaveChanges)
+        val editTextTitle: EditText = findViewById(R.id.editTextTaskTitle)
+        val editTextDesc: EditText = findViewById(R.id.editTextTaskDescription)
+
+        // 2. Ambil objek Task yang dikirim melalui Intent
+        originalTask = getTaskFromIntent(intent, EXTRA_EDIT_TASK)
+
+        // Lakukan pengecekan keamanan. Jika karena suatu alasan tidak ada data,
+        // tampilkan pesan error dan tutup activity ini.
+        if (originalTask == null) {
+            Toast.makeText(this, "Error: Tidak ada tugas yang bisa diedit", Toast.LENGTH_SHORT).show()
+            finish()
+            return
+        }
+
+        // 3. Isi form dengan data dari tugas yang diterima
+        editTextTitle.setText(originalTask?.title)
+        editTextDesc.setText(originalTask?.description)
+
+        // 4. Atur listener untuk tombol kembali
+        buttonBack.setOnClickListener {
+            finish() // Cukup tutup activity
+        }
+
+        // 5. Atur listener untuk tombol simpan perubahan
+        buttonSaveChanges.setOnClickListener {
+            // Ambil teks terbaru dari form
+            val updatedTitle = editTextTitle.text.toString().trim()
+            val updatedDescription = editTextDesc.text.toString().trim()
+
+            // Validasi: judul tidak boleh kosong
+            if (updatedTitle.isEmpty()) {
+                Toast.makeText(this, "Judul tidak boleh kosong!", Toast.LENGTH_SHORT).show()
+                return@setOnClickListener
+            }
+
+            // Buat objek Task baru dengan data yang sudah diupdate.
+            // Penting: kita gunakan .copy() untuk mempertahankan data yang tidak berubah
+            // (seperti 'id', 'time', dan 'isDone') dari tugas aslinya.
+            val updatedTask = originalTask!!.copy(
+                title = updatedTitle,
+                description = updatedDescription
+            )
+
+            // Siapkan Intent untuk mengirim data kembali ke HomeActivity
+            val resultIntent = Intent()
+            // Masukkan tugas yang sudah diupdate ke dalam Intent
+            resultIntent.putExtra(EXTRA_UPDATED_TASK, updatedTask)
+            // Set hasilnya sebagai RESULT_OK agar HomeActivity tahu operasinya sukses
+            setResult(Activity.RESULT_OK, resultIntent)
+            // Tutup activity ini dan kembali ke HomeActivity
+            finish()
+        }
+    }
+
+    /**
+     * Fungsi bantuan yang sama seperti di HomeActivity untuk mengambil data dari Intent.
+     */
+    private fun getTaskFromIntent(data: Intent?, extraKey: String): Task? {
+        return if (Build.VERSION.SDK_INT >= Build.VERSION_CODES.TIRAMISU) {
+            data?.getParcelableExtra(extraKey, Task::class.java)
+        } else {
+            @Suppress("DEPRECATION")
+            data?.getParcelableExtra(extraKey)
+        }
+    }
+
+    /**
+     * Companion object untuk menyimpan konstanta kunci Intent.
+     * Ini praktik yang baik untuk menghindari salah ketik.
+     */
+    companion object {
+        // Kunci untuk mengirim Task DARI HomeActivity KE EditTaskActivity
+        const val EXTRA_EDIT_TASK = "EXTRA_EDIT_TASK"
+        // Kunci untuk mengirim Task DARI EditTaskActivity KEMBALI KE HomeActivity
+        const val EXTRA_UPDATED_TASK = "EXTRA_UPDATED_TASK"
+    }
+}
