+package com.example.notes_app
+
+import android.content.Context
+import androidx.work.CoroutineWorker
+import androidx.work.Data
+import androidx.work.WorkerParameters
+import com.google.gson.Gson
+import com.google.gson.reflect.TypeToken
+import kotlinx.coroutines.delay
+
+class TaskUpdateWorker(appContext: Context, workerParams: WorkerParameters) :
+    CoroutineWorker(appContext, workerParams) {
+
+    override suspend fun doWork(): Result {
+        // Ambil daftar tugas dari data input yang dikirim oleh HomeActivity
+        val taskListJson = inputData.getString(KEY_TASK_LIST) ?: return Result.failure()
+
+        // Ubah string JSON kembali menjadi List<Task>
+        val gson = Gson()
+        val taskListType = object : TypeToken<MutableList<Task>>() {}.type
+        val tasks: MutableList<Task> = gson.fromJson(taskListJson, taskListType)
+
+        val currentTime = System.currentTimeMillis()
+        var hasChanges = false
+
+        // Loop melalui setiap tugas untuk memeriksa waktunya
+        tasks.forEach { task ->
+            // Periksa jika waktu tugas sudah lewat DAN statusnya masih "On Schedule"
+            if (task.dateTimeMillis < currentTime && task.status == "On Schedule") {
+                task.status = "Missed" // Ubah status menjadi "Missed"
+                hasChanges = true
+            }
+        }
+
+        // Jika ada perubahan status, kirim kembali daftar tugas yang sudah diperbarui
+        return if (hasChanges) {
+            val updatedTaskListJson = gson.toJson(tasks)
+            val outputData = Data.Builder()
+                .putString(KEY_TASK_LIST_UPDATED, updatedTaskListJson)
+                .build()
+            Result.success(outputData)
+        } else {
+            // Jika tidak ada perubahan, selesaikan tugas tanpa mengirim data apa pun
+            Result.success()
+        }
+    }
+
+    companion object {
+        // Kunci untuk mengirim dan menerima data dari/ke worker
+        const val KEY_TASK_LIST = "key_task_list"
+        const val KEY_TASK_LIST_UPDATED = "key_task_list_updated"
+        const val UNIQUE_WORK_NAME = "task_update_work"
+    }
+}
