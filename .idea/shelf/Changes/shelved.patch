+    private lateinit var binding: ActivityMainBinding
+    private lateinit var taskAdapter: TaskAdapter
+    private val taskList = mutableListOf<Task>()
+
+    // Variabel untuk mengelola state UI
+    private var selectedTask: Task? = null
+    private var isAllFabsVisible: Boolean = false
+
+    // Launcher untuk menambah tugas
+    private val addTaskLauncher = registerForActivityResult(ActivityResultContracts.StartActivityForResult()) { result ->
+        if (result.resultCode == Activity.RESULT_OK) {
+            getTaskFromIntent(result.data, AddTaskActivity.EXTRA_NEW_TASK)?.let {
+                taskList.add(0, it)
+                taskAdapter.notifyItemInserted(0)
+                binding.recyclerViewTasks.scrollToPosition(0)
+                // PANGGIL UPDATE SETELAH MENAMBAH
+                updateTaskCount()
+            }
+        }
+    }
+    // Launcher untuk mengedit tugas
+    private val editTaskLauncher = registerForActivityResult(ActivityResultContracts.StartActivityForResult()) { result ->
+        if (result.resultCode == Activity.RESULT_OK) {
+            getTaskFromIntent(result.data, AddTaskActivity.EXTRA_EDITED_TASK)?.let { updatedTask ->
+                val index = taskList.indexOfFirst { it.id == updatedTask.id }
+                if (index != -1) {
+                    taskList[index] = updatedTask
+                    taskAdapter.notifyItemChanged(index)
+                }
+            }
+        }
+        // Setelah selesai edit, selalu reset state UI
+        resetSelection()
+    }
+
+    override fun onCreate(savedInstanceState: Bundle?) {
+        super.onCreate(savedInstanceState)
+        binding = ActivityMainBinding.inflate(layoutInflater)
+        setContentView(binding.root)
+
+        // Pastikan FAB sekunder benar-benar tersembunyi pada awalnya
+        binding.fabEdit.visibility = View.GONE
+        binding.fabDelete.visibility = View.GONE
+
+        setupRecyclerView()
+        setupClickListeners()
+        loadDummyTasks()
+
+        // PANGGIL UPDATE SAAT APLIKASI PERTAMA KALI DIBUAT
+        updateTaskCount()
+    }
+
+    private fun setupRecyclerView() {
+        taskAdapter = TaskAdapter(taskList) { task, position ->
+            // Simpan tugas yang dipilih
+            selectedTask = task
+
+            // Perbarui posisi item yang dipilih di adapter
+            val previousSelectedPosition = taskAdapter.selectedItemPosition
+            taskAdapter.selectedItemPosition = position
+
+            // Beri tahu adapter untuk me-refresh item yang lama dan yang baru agar sorotan berpindah
+            if (previousSelectedPosition != -1) {
+                taskAdapter.notifyItemChanged(previousSelectedPosition)
+            }
+            taskAdapter.notifyItemChanged(position)
+
+            // LANGSUNG TAMPILKAN FAB Aksi (Edit/Delete) saat item diklik.
+            if (!isAllFabsVisible) {
+                showActionFabs()
+            }
+        }
+        binding.recyclerViewTasks.layoutManager = LinearLayoutManager(this)
+        binding.recyclerViewTasks.adapter = taskAdapter
+    }
+
+    private fun setupClickListeners() {
+        binding.fabAddTask.setOnClickListener {
+            if (isAllFabsVisible) {
+                // Jika FAB Aksi sedang tampil, tombol ini berfungsi sebagai 'X' untuk menutup/membatalkan.
+                resetSelection()
+            } else {
+                // Jika tidak ada item yang dipilih, tombol ini berfungsi untuk menambah tugas baru.
+                val intent = Intent(this, AddTaskActivity::class.java)
+                addTaskLauncher.launch(intent)
+            }
+        }
+
+        binding.fabEdit.setOnClickListener {
+            selectedTask?.let {
+                val intent = Intent(this, AddTaskActivity::class.java)
+                intent.putExtra(AddTaskActivity.EXTRA_EDIT_TASK, it)
+                editTaskLauncher.launch(intent)
+            }
+        }
+
+        binding.fabDelete.setOnClickListener {
+            selectedTask?.let { showDeleteConfirmationDialog(it) }
+        }
+    }
+
+    private fun showActionFabs() {
+        isAllFabsVisible = true
+        // Putar FAB utama menjadi 'X'
+        binding.fabAddTask.animate().rotation(45f).setDuration(300).start()
+        // Tampilkan FAB sekunder dengan animasi bawaan
+        binding.fabEdit.show()
+        binding.fabDelete.show()
+    }
+
+    private fun hideActionFabs() {
+        isAllFabsVisible = false
+        // Putar kembali FAB utama menjadi '+'
+        binding.fabAddTask.animate().rotation(0f).setDuration(300).start()
+        // Sembunyikan FAB sekunder dengan animasi bawaan
+        binding.fabEdit.hide()
+        binding.fabDelete.hide()
+    }
+
